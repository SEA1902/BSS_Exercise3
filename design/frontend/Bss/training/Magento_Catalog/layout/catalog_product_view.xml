<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceBlock name="product.info">
            <block name="product.info.backto"  template="Magento_Catalog::product/view/backto.phtml"/>
            <block name="product.info.totalreview"  template="Magento_Catalog::product/view/totalreview.phtml"/>
        </referenceBlock>
            <!--bss-->
        <referenceBlock name="product.detail.page">
            <block name="bss" template="Magento_Catalog::product/slider/product-slider.phtml">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">We found other products you might like!</argument>
                    <argument name="category_ids" xsi:type="string">2</argument>
                    <argument name="page_size" xsi:type="string">4</argument>
                </arguments>
            </block>
        </referenceBlock>

    </body>
</page>
